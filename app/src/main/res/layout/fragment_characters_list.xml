<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.characters.view.CharactersListFragment">



    <TextView
        android:id="@+id/header_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Characters"
        android:textSize="60sp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/schwifty"
        android:textColor="@color/fresh_green"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_title"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_text_search"
            style="@style/edit_text_search"
            android:hint="Search" />

        <ImageButton
            android:id="@+id/bt_filter"
            android:src="@drawable/ic_filter"
            style="@style/bt_filter" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recycler_view_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_layout" >

    </androidx.recyclerview.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/standard_bottom_sheet"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        style="@style/bottom_sheet"
        android:backgroundTint="@color/peach">

        <View style="@style/handler_bottom_sheet" />


        <TextView
            android:id="@+id/btn_sheet_header"
            style="@style/header_bottom_sheet"
            android:text="Filters"
            android:gravity="center"/>


        <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="5dp"
        android:text="Status"
            android:fontFamily="@font/wubbalubbadubdub"
            android:textSize="22sp"
            android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_layout" />

        <RadioGroup
            android:id="@+id/rgStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/fresh_green" />

            <RadioButton
                android:layout_marginTop="12dp"
                android:id="@+id/rbAlive"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="Alive" />

            <RadioButton
                android:id="@+id/rbDead"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="Dead" />

            <RadioButton
                android:id="@+id/rbUnknown"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="Unknown" />

        </RadioGroup>

        <TextView
            android:id="@+id/status_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="5dp"
            android:text="Gender"
            android:fontFamily="@font/wubbalubbadubdub"
            android:textSize="22sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_layout" />


        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fresh_green" />
        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <RadioButton
                android:layout_marginTop="12dp"
                android:layout_height="24dp"
                android:id="@+id/rbFemale"
                android:layout_width="match_parent"
                android:text="Female" />

            <RadioButton
                android:layout_marginTop="12dp"
                android:id="@+id/rbMale"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="Male" />

            <RadioButton
                android:layout_marginTop="12dp"
                android:id="@+id/rbGenderless"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="Genderless" />

            <RadioButton
                android:layout_marginTop="12dp"
                android:id="@+id/rbUnknownGender"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="Unknown" />

        </RadioGroup>

        <LinearLayout
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="80dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button

            android:fontFamily="@font/wubbalubbadubdub"
            android:textSize="24sp"
            android:background="@drawable/btn_filters"
            android:textColor="@color/black"
            android:id="@+id/btnApply"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="Apply" />

        <Button

            android:fontFamily="@font/wubbalubbadubdub"
            android:textSize="24sp"
            android:layout_marginStart="4dp"
            android:background="@drawable/btn_filters"
            android:textColor="@color/black"
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Clear" />
    </LinearLayout>



    </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</androidx.constraintlayout.widget.ConstraintLayout>