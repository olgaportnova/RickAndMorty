<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    // characters fragment

    <style name="items_fields_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:fontFamily">@font/wubbalubbadubdub</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="items_fields_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:fontFamily">@font/wubbalubbadubdub</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="item_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/schwifty</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="item_image">
        <item name="android:background">@drawable/background_character_image</item>
        <item name="android:clipToOutline" tools:ignore="NewApi">true</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="bt_filter">
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/rounded_edittext_bg</item>
    </style>

    <style name="edit_text_search">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autofillHints"></item>
        <item name="android:background">@drawable/rounded_edittext_bg</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textColorHint">@color/soft_blue</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingEnd">27dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="image_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">220dp</item>
    </style>



    <style name="bottom_sheet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/rounded_bottom_sheet</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:orientation">vertical</item>


    </style>

    <style name="header_bottom_sheet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/fresh_green</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/schwifty</item>
    </style>


    <style name="handler_bottom_sheet">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/bottom_sheet_small_handler</item>
    </style>


</resources>